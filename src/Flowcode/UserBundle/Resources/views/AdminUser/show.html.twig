{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
{{ include('FlowcodeUserBundle:AdminUser:usersHeader.html.twig') }}

<section class="content">

    <div class="box box-solid">
        <div class="box-header">
            <div class="box-tools">
                <a class="btn btn-link btn-sm" href="{{ path('admin_user_new') }}">
                    <i class="fa fa-plus"></i> {{ 'create'|trans }}
                </a>
                <a class="btn btn-link btn-sm" href="{{ path('admin_user') }}">
                    {{ "Back to the list"|trans }}
                </a>
                <a class="btn btn-link btn-sm" href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
                    {{ "edit"|trans }}
                </a>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-condensed">
                <tbody>
                    <tr>
                        <th>{{ "firstname"|trans }}</th>
                        <td>{{ entity.firstname }}</td>
                    </tr>
                    <tr>
                        <th>{{ "Email"|trans }}</th>
                        <td>{{ entity.email }}</td>
                    </tr>

                    <tr>
                        <th>{{ "Username"|trans }}</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                    <tr>
                        <th>{{ "status"|trans }}</th>
                        <td>
                            {% if entity.status %}
                            {{ "active"|trans }}
                            {% else %}
                            {{ "active"|trans }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>{{ "Created"|trans }}</th>
                        <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>{{ "Updated"|trans }}</th>
                        <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</section>

{% endblock %}
