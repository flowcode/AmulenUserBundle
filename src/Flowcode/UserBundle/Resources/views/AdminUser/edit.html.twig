{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
{{ include('FlowcodeUserBundle:AdminUser:usersHeader.html.twig') }}
<section class="content">
    <div class="box box-solid">
        <div class="box-header">
            <h1 class="box-title">{{ 'edit'|trans|capitalize }}</h1>
            <div class="box-tools">
                    <a class="btn btn-link btn-sm" href="{{ path('admin_user') }}">
                        {{ 'Back to the list'|trans}}
                    </a>
            </div>
        </div>
        <div class="box-body">
            {{ form(edit_form, { 'style': 'horizontal' }) }}
            {{ form(delete_form) }}
        </div>
    </div>
</section>
{% endblock %}
