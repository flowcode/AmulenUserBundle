{% extends "AppBundle::frontend.html.twig" %}

{% block body %}
    <div class="col-md-4 col-md-offset-4">
        <div class="login-box">
            <div class="login-box-body">
                {% if error %}
                    <p class="login-box-msg">
                        {{ error.messageKey|trans }}
                    </p>
                {% endif %}
                <form action="{{ path("amulen_forgot_check") }}" method="post">
                    <div class="form-group has-feedback">
                        <input type="text" name="_username" placeholder="{{ 'security.login.username_or_email'|trans|title }}"
                               value="{{ last_email }}" required="required" class="form-control"/>
                    </div>

                    <div class="row">
                        <div class="col-xs-8">
                            <a href="{{ path("amulen_user_login") }}">
                                <i class="fa fa-long-arrow-left"></i> {{ 'security.login'|trans|title }}
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <input class="btn btn-primary btn-block btn-flat" tabindex="0" type="submit" id="_submit"
                                   name="_submit" value="{{ 'security.login.send_resetting'|trans|title }}"/>
                        </div>
                    </div>
                </form>

            </div><!-- /.login-box-body -->
        </div><!-- /.login-box -->
    </div>

{% endblock %}
