{% extends "AppBundle::frontend.html.twig" %}

{% block body %}
    <div class="col-md-4 col-md-offset-4">

        <div class="login-box">
            <h1>
                {{ 'security.login'|trans|title }}
            </h1>
            <div class="login-box-body">
                {% if error %}
                    <p class="login-box-msg">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </p>
                {% endif %}

                <form action="{{ path("amulen_user_check") }}" method="post">
                    <div class="form-group has-feedback">
                        <input type="text" id="username" name="_username"
                               placeholder="{{ 'security.login.username_or_email'|trans|title }}"
                               value="{{ last_username }}"
                               required="required" class="form-control"/>

                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" id="password" name="_password"
                               placeholder="{{ 'security.login.password'|trans|title }}" required="required"
                               class="form-control"/>

                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> {{ "security.login.remember"|trans|title }}
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <input class="btn btn-primary btn-block btn-flat" type="submit" id="_submit" name="_submit"
                                   value="{{ 'security.login.submit'|trans|title }}"/>
                        </div>
                    </div>
                </form>

                <a href="{{ path("amulen_login_forgot") }}">
                    {{ "security.login.forgot"|trans|title }}
                </a>

                <hr>
                <h5>
                    {{ 'security.no_account'|trans|title }}
                </h5>
                <div>
                    <p>
                        <button class="btn btn-block btn-lg btn-social btn-facebook" type="#">
                            <span class="fa fa-facebook"></span> {{ 'user.signin'|trans|title }} Facebook
                        </button>
                    </p>
                    <p>
                        <button class="btn btn-block btn-lg btn-social btn-twitter" type="#">
                            <span class="fa fa-twitter"></span> {{ 'user.signin'|trans|title }} Twitter
                        </button>
                    </p>
                    <p>
                        <button class="btn btn-block btn-lg btn-social btn-google" type="#">
                            <span class="fa fa-google"></span> {{ 'user.signin'|trans|title }} Google
                        </button>
                    </p>
                    <p>
                        <a href="{{ path('amulen_user_register') }}" class="btn btn-block btn-default btn-lg ">
                            {{ 'user.register'|trans|title }}
                        </a>
                    </p>

                </div>

            </div><!-- /.login-box-body -->
        </div><!-- /.login-box -->
    </div>
{% endblock %}
